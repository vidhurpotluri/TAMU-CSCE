<nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
  <a class="navbar-brand" href="#">Forgot password</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

</nav>


<%= form_tag(password_resets_path, :method => "post", id: "reset-password-form",) do %>
<div class='container' style="margin-left: auto;margin-right: auto; width: 40vw">
  <div id="clearance" class="reset-password">
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
        <br />
      </div>
    <% end %>
    <div>
      <%= label_tag :email %> <br />
      <%= text_field :email, params[:email], class: "form-group form-control" %>
        <%= submit_tag "Reset Password" %>
      <% end %>
    </div>
    

    
    <div class="other-links">
      </br>
      <%= link_to t(".sign_up"), sign_up_path %> </br>
      <%= link_to t(".sign_in"), sign_in_path %>

    </div>
  </div>
</div>