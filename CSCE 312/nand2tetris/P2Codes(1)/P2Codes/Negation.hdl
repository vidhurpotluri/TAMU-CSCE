CHIP Negation {
    IN in[16];
    OUT out[16];

    PARTS:
	// Put your code here:
	// Step 1: Invert the bits:
	Not16(in = in, out = out0);
	// Step 2: Add 1 to the LSB using the 16-bit incrementor
	Inc16(in = out0, out = out);
}
